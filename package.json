{
  "name": "micro-frontend",
  "version": "1.0.0",
  "description": "micro frontend client-side integration approach",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "format": "npm run lint -- --fix",
    "lint": "eslint src test --ext .ts",
    "test": "mocha --require ts-node/register --extensions ts 'test/**/*.test.ts'",
    "test:watch": "npm run test -- --watch --watch-files ./src/**/*.ts --watch-files ./test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devonfw-forge/micro-frontend.git"
  },
  "keywords": [
    "micro-fronteds",
    "shell",
    "client-side",
    "integration"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/devonfw-forge/micro-frontend/issues"
  },
  "homepage": "https://github.com/devonfw-forge/micro-frontend#readme",
  "devDependencies": {
    "@types/assert": "^1.5.2",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "assert": "^2.0.0",
    "eslint": "^7.8.1",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
